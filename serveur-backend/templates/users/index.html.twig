{% extends 'base.html.twig' %}

{% block title %}TpaUsers index{% endblock %}

{% block body %}
    <h1>TpaUsers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>UserPassword</th>
                <th>UserCreateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tpa_user in tpa_users %}
            <tr>
                <td>{{ tpa_user.id }}</td>
                <td>{{ tpa_user.email }}</td>
                <td>{{ tpa_user.lastname }}</td>
                <td>{{ tpa_user.firstname }}</td>
                <td>{{ tpa_user.userPassword }}</td>
                <td>{{ tpa_user.userCreateAt ? tpa_user.userCreateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_users_show', {'id': tpa_user.id}) }}">show</a>
                    <a href="{{ path('app_users_edit', {'id': tpa_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_users_new') }}">Create new</a>
{% endblock %}
